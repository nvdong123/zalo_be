# FastAPI Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Server Configuration
SERVER_NAME=Zalo Mini App Backend
SERVER_HOST=http://localhost:8000
API_V1_STR=/api/v1

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Database Configuration
MYSQL_SERVER=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DB=zalo_miniapp
DATABASE_URI=mysql+pymysql://root:your_mysql_password@localhost/zalo_miniapp

# Project Info
PROJECT_NAME=Zalo Mini App

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Zalo Mini App

# User Configuration
USERS_OPEN_REGISTRATION=false
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48
EMAILS_ENABLED=false

# First Superuser
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Zalo Mini App Configuration
ZALO_APP_ID=your_zalo_app_id
ZALO_APP_SECRET=your_zalo_app_secret

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
